#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int n,i,j,k;

	printf("enter a number");
	scanf("%d",&n);
	for(i=1;i<n;i++){

	for(j=n;j>=j-i;j--)
		printf(" ");
	for(k=1;k<=n:k++){
		printf("*");/* prints !!!Hello World!!! */
	}
	printf("\n");
	}
	return EXIT_SUCCESS;
}
