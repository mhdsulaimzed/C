#include <stdio.h>
#include <stdlib.h>

int main(void)
		{
			int i,j,limit=5;
			for(i=1;i<=limit;i++)
			{
				for(j=1;j<=(2*limit)-1;j++)
				{
					if(j==1||i==j||i==limit||i+j==2*limit||j==(2*limit)-1||i==1||j==limit)
			printf("* ");

				else
				{
					printf("  ");}
				}
	printf("\n");}
	return EXIT_SUCCESS;
}
