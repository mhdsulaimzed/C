#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int limit=4,i,j,l,k;
	for(i=1;i<=limit;i++)
	{
		for(j=1;j<=1;j++)
		{
			printf("*\n");
		}
		for(k=i;k<=i;k++)
		{
			for(l=1;l<=3;l++)
			{
				printf("*");
			}
			printf("\n");
		}

	}
	return EXIT_SUCCESS;
}
