#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int limit,i,j;
	printf("enter a limit");
	scanf("%d",&limit);
	for(i=1;i<=limit;i++)
	{
		for(j=1;j<=i;j++)
		{/* prints !!!Hello World!!! */
			printf("+\t");
		}
	printf("\n")}
	return EXIT_SUCCESS;
}
